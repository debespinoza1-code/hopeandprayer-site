backend:
  name: git-gateway
  branch: main

media_folder: "assets"
public_folder: "/assets"

collections:
  - name: "reflection"
    label: "Daily Reflection"
    files:
      - file: "content/today.json"
        label: "Today"
        name: "today"
        fields:
          - label: "Opening"
            name: "opening"
            widget: "string"
            required: false

          - label: "Reflection"
            name: "body"
            widget: "text"

          - label: "Closing Prayer"
            name: "prayer"
            widget: "string"
            required: false
